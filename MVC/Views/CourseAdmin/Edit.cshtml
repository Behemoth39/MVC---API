@model WestCoastEducation.web.ViewModels.CoursePostViewModel // måste visa värden som finns 
@{
    ViewBag.Pagetitle = "Course-panel";
}
<section>
    <h1 class="table-h1">Ändra kurs</h1>
    <form asp-action="edit" asp-controller="CourseAdmin" method="post">       
        <div class="form-spacing">
            <label asp-for="CourseNumber"></label>
            <input asp-for="CourseNumber">            
            <span class="error" asp-validation-for="CourseNumber"></span>
        </div>
        <div class="form-spacing">
            <label asp-for="CourseTitle"></label>
            <input asp-for="CourseTitle">
            <span class="error" asp-validation-for="CourseTitle"></span>
        </div>
        <div class="form-spacing">
            <label asp-for="CourseStartDate"></label>
            <input asp-for="CourseStartDate">
            <span class="error" asp-validation-for="CourseStartDate"></span>
        </div>
        <div class="form-spacing">
            <label asp-for="CourseEndDate"></label>
            <input asp-for="CourseEndDate">
            <span class="error" asp-validation-for="CourseEndDate"></span>
        </div>
        <div>
            <div class="buttons">
                <button type="submit" class="btn-form">Spara</button>
                <a asp-action="index" asp-controller="CourseAdmin" class="btn-form">Avbryt</a>
            </div>
        </div>
    </form>
</section>
