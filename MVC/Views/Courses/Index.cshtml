@model IList<WestCoastEducation.web.ViewModels.CourseListViewModel>

@{
    ViewBag.Pagetitle = "Courses";
}

<section class="main-content">
    <div class="main-content-row-1">   
        <img src="~/Media/school.png" alt="School" height="800" width="800" />
    </div>
    <div class="main-content-row-2">
        <h1>Kurslista</h1>        
        <p>
            @foreach (var course in Model)
            {
                    <p><a asp-action="details" asp-route-courseId="@course.Id">
                        @course.CourseTitle - @course.CourseNumber
                    </a></p>
            }
        </p>
    </div>
</section>
